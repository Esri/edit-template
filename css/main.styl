  }
.edit-toolbar .templatePicker{
  padding-top:40px;
}
.templatePicker .tooltip{
  display:none;
}
.templatePicker{
  padding: 10px 20px 0 0;
  width:$drawer-width;
  height:auto;
  border: none; 
  margin:auto;
  position:absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
}
.esriEditor{
  width:$drawer-width;
  height:100%;
}
.esriPopup.light .pointer, .esriPopup.light .outerPointer{
  background:#fff !important;
}
.edit-toolbar  .esriEditor .esriDrawingToolbar{
    position: absolute;
    right:0;
    left:0;
    top:0;
    border-top: none;
    border-right: none;
    border-left: none;
    padding-bottom:11px;
    padding-top:11px;
    background: rgba(255, 255, 255, 0.9);
}
.loading-indicator {
  /* Loading status */
  display: none;
  height: 100%;
  width: 100%;
  z-index: 500;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  background: #fff;
}
.app-loading .loading-indicator,
.app-error .loading-indicator {
  /* Show this class when loading or error */
  display: block;
}
.app-loading .loading-indicator {
  /* Loading image */
  background-position: center center;
  background-image: url(../images/ajax-loader.gif);
  background-repeat: no-repeat;
}
.app-error .loading-message {
  /* Error status */
  background-position: top center;
  background-image: url(../images/error.png);
  background-repeat: no-repeat;
  padding-top: 60px;
  width: 100%;
  position: absolute;
  z-index: 2;
  top: 40%;
  left: 0;
  text-align: center;
}