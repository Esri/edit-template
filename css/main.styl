@import "nib";
@import "drawer";
@import "iconfonts";

$drawer-width = 100%;

html,
body {
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
  font-family: Arial, Helvetica, sans-serif;
}
#mapDiv {
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
}
#title{
  width:80%;
  text-align:center;
  vertical-align:middle;
  margin:auto;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
